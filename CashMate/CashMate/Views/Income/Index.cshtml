@model IEnumerable<CashMate.Models.Income>

@{
    ViewData["Title"] = "Income";
}

<div class="page-header mb-4">
    <h1>Manage Your Income</h1>
    <a href="/Income/Create" class="btn btn-primary">Add New Income</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Source</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Actions</th> <!-- Колона за действия -->
        </tr>
    </thead>
    <tbody>
        @foreach (var income in Model)
        {
            <tr>
                <td>@income.Source</td>
                <td>@income.Amount</td>
                <td>@income.Date.ToString("yyyy-MM-dd")</td> <!-- Форматиране на датата -->
                <td>
                    <a href="@Url.Action("Edit", "Income", new { id = income.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Income", new { id = income.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    